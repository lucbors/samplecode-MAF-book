                    <amx:outputText value="Square 1" id="ot6"/>
                </amx:cellFormat>
                <amx:cellFormat id="cf3" inlineStyle="background-color:Aqua;" valign="top" width="50%">
                    <amx:outputText value="Square 2" id="ot7"/>
                </amx:cellFormat>
            </amx:rowLayout>
         
            <amx:rowLayout id="rl3">
                <amx:cellFormat id="cf4" height="#{(deviceScope.hardware.screen.availableHeight-44)/2}"
                                inlineStyle="background-color:Red" valign="top" width="50%">
